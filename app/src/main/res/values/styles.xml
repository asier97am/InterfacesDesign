<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:backgroundTint">@color/palmeraHoja</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myButtonInverse">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:backgroundTint">@color/mar</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myButtonRegistro" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="myButtonLogin" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>



</resources>